@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PrioniaApp.Areas.Client.ViewModels.Home
@using PrioniaApp.Areas.Client.ViewCompanents
@model IndexViewModel

<!-- Begin Slider Area -->
<div class="slider-area">
    <!-- Main Slider -->
    <div class="swiper-container main-slider swiper-arrow with-bg_white">
        <div class="swiper-wrapper">


            @foreach (var slider in Model.Sliders)
            {
                <div class="swiper-slide animation-style-01">
                    <div class="slide-inner style-1 bg-height"
                     data-bg-image="client/assets/images/slider/bg/1-1.jpg">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6 order-2 order-lg-1 align-self-center">
                                    <div class="slide-content text-black">
                                        <span class="offer">@slider.HeaderTitle</span>
                                        <h2 class="title">@slider.MainTitle</h2>
                                        <p class="short-desc">
                                            @slider.Content
                                        </p>
                                        <div class="btn-wrap">
                                            <a class="btn btn-custom-size xl-size btn-pronia-primary"
                                           asp-route="@slider.ButtonRedirectUrl">@slider.Button</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-8 offset-md-2 offset-lg-0 order-1 order-lg-2">
                                    <div class="inner-img">
                                        <div class="scene fill">
                                            <div class="expand-width" data-depth="0.2">
                                                <img src="~/@slider.BackGroundImageUrl"
                                                 alt="Inner Image" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--ForEach-->



        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination d-md-none"></div>

        <!-- Add Arrows -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</div>
<!-- Slider Area End Here -->
<!-- Begin Shipping Area -->
@await Component.InvokeAsync(nameof(PaymentBenefit));
<!-- Shipping Area End Here -->
<!-- Begin Product Area -->
<div class="product-area section-space-top-100">
    <div class="container">
        <div class="section-title-wrap">
            <h2 class="section-title mb-0">Our Products</h2>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav product-tab-nav tab-style-1"
                    id="myTab"
                    role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="active"
                           id="featured-tab"
                           data-bs-toggle="tab"
                           href="#featured"
                           role="tab"
                           aria-controls="featured"
                           aria-selected="true">
                            Featured
                        </a>
                    </li>
                    
                    <li class="nav-item" role="presentation">
                        <a id="bestseller-tab"
                           data-bs-toggle="tab"
                           href="#bestseller"
                           role="tab"
                           aria-controls="bestseller"
                           aria-selected="false">
                            Bestseller
                        </a>
                    </li>

                    <li class="nav-item" role="presentation">
                        <a id="latest-tab"
                           data-bs-toggle="tab"
                           href="#latest"
                           role="tab"
                           aria-controls="latest"
                           aria-selected="false">
                            Latest
                        </a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active"
                         id="featured"
                         role="tabpanel"
                         aria-labelledby="featured-tab">
                        <div class="product-item-wrap row">
                          
                            @await Component.InvokeAsync(nameof(Product))

                        </div>
                    </div>

                    <div class="tab-pane fade"
                         id="bestseller"
                         role="tabpanel"
                         aria-labelledby="bestseller-tab">
                        <div class="product-item-wrap row">

                            @await Component.InvokeAsync(nameof(Product),"BestProducts")

                        </div>
                    </div>
                    <div class="tab-pane fade"
                         id="latest"
                         role="tabpanel"
                         aria-labelledby="latest-tab">
                        <div class="product-item-wrap row">

                            @await Component.InvokeAsync(nameof(Product),"NewProduct")

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Area End Here -->
