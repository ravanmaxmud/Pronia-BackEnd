@using PrioniaApp.Areas.Client.ViewCompanents
<div class="breadcrumb-area breadcrumb-height"
     data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading">Blog</h2>
                    <ul>
                        <li>
                            <a href="index.html">Home</a>
                        </li>
                        <li>Blog Grid View</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="blog-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 order-2 pt-5 pt-lg-0">
                <div class="sidebar-area">
                    <div class="widgets-searchbox">
                        @using (Html.BeginForm("Index", "BlogPage", FormMethod.Get))
                        {
                            <div class="d-none">
                                <b>Search By :</b>
                                @Html.RadioButton("searchBy","Title",true) <text>Name</text>
                                <br />
                            </div>


                            @Html.TextBox("search", null, new { @class="search-box-product"})
                            <button class="search-btn-product" type="submit" aria-label="searchbtn"><i class="pe-7s-search"></i></button>
                        }

                    </div>
                    <div class="widgets-area">
                        <!--BlogCategorys-->
                        @await Component.InvokeAsync(nameof(BlogPageCategory))


                        <div class="widgets-item">
                            <h2 class="widgets-title mb-4">Recent Post</h2>
                            <div class="swiper-container widgets-list-slider">
                                <!--LatestBlog-->
                                @await Component.InvokeAsync(nameof(LatestBlog))
                            </div>
                        </div>

                        @await Component.InvokeAsync(nameof(BlogPageTag))
                    </div>
                    <div class="banner-item widgets-banner img-hover-effect">
                        <div class="banner-img">
                            <img src="assets/images/website-images/sidebar/banner/1-270x300.jpg"
                                 alt="Banner Image" />
                        </div>
                        <div class="banner-content text-position-center">
                            <span class="collection">New Collection</span>
                            <h3 class="title">Plant Port</h3>
                            <div class="button-wrap">
                                <a class="btn btn-custom-size sm-size btn-pronia-primary"
                                   href="shop.html">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-8 order-1 blog-pro">
                @await Component.InvokeAsync(nameof(BlogPage),new { searchBy = ViewBag.SearchBy, search = ViewBag.Search })
                <div class="pagination-area">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">&raquo;</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>