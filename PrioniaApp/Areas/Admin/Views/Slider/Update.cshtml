@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PrioniaApp.Areas.Admin.ViewModels.Slider
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Books</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-slider-update" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>HeaderTitle</label>
                            <input asp-for="HeaderTitle" class="form-control">
                            <span asp-validation-for="HeaderTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>MainTitle</label>
                            <input asp-for="MainTitle" class="form-control">
                            <span asp-validation-for="MainTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Button</label>
                            <input asp-for="Button" class="form-control">
                            <span asp-validation-for="Button" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>ButtonRedirectUrl</label>
                            <input asp-for="ButtonRedirectUrl" class="form-control">
                            <span asp-validation-for="ButtonRedirectUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Backgroundİmage</label>
                            <input asp-for="Backgroundİmage" class="form-control">
                            <span asp-validation-for="Backgroundİmage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="BackgroundİmageUrl" type="hidden">
                            <img src="~/@Model.BackgroundİmageUrl" width="30%" />
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>