@using PrioniaApp.Areas.Client.ViewModels.Blog
@model List<CategoryListItemViewModel>

<div class="widgets-item pt-0">
    <h2 class="widgets-title mb-4">Categories</h2>
    <ul class="widgets-category">

        <li>
            <a asp-route="client-blog-index">
                <i class="fa fa-chevron-right"></i>
                All <span>(@Model.Count())</span>
            </a>
        </li>

        @foreach (var item in Model)
        {
            <li>
                <input type="hidden" value="@item.Id" />
                <a class="select-blog-category" asp-route="client-blog-filter">
                    <i class="fa fa-chevron-right"></i>
                    @item.Title
                </a>
            </li>
        }
    </ul>
</div>