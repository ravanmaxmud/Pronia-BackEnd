@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PrioniaApp.Areas.Admin.ViewModels.Contact
@model List<ListItemViewModel>

<div>
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-route="admin-product-list">Products</a>
                        </li><!--end nav-item-->
                        <li class="breadcrumb-item active">ProductImage</li>
                    </ol>
                </div>
                <h4 class="page-title">Books</h4>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>User Email</th>
                            <th>Contact Content</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bookImage in Model)
                        {
                            <tr>
                                <td>@bookImage.Email</td>
                                <td>@bookImage.Content</td>
                                <td>@bookImage.CratedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <form method="POST" asp-route="admin-contact-delete" asp-route-id="@bookImage.Id" id="book-image-form-@bookImage.Id"></form>
                                    <button type="submit" form="book-image-form-@bookImage.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>