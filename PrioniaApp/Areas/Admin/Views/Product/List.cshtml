@using PrioniaApp.Areas.Admin.ViewModels.Product
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-product-add" class="btn btn-secondary">Add new Product</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            @*<th>Image</th>*@
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Catagory</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                @*<td>
                                    <img width="20%" src="~/@book.ImageUrl"/>
                                </td>*@
                                <td>@book.Name</td>
                                <td>@book.Price</td>
                                <td>@book.Description</td>
                                <td>@string.Join(", ", book.Categories.Select(c => $"{c.Title}->{c.ParentTitle}"))</td>
                                <td>@book.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                   
                                    <a asp-route="admin-product-update" asp-route-id="@book.Id" ><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-product-delete" asp-route-id="@book.Id" id="book-form-@book.Id"></form>
                                    <button type="submit" form="book-form-@book.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                    <a class="btn btn-danger" asp-route="admin-product-image-list" asp-route-bookId="@book.Id">BookImageList</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>