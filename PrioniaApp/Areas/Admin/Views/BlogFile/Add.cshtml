@using PrioniaApp.Areas.Admin.ViewModels.BlogFile
@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add new Plant image</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-blogimage-add" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="File" class="form-control">
                            <span asp-validation-for="File" class="text-danger"></span>
                            <br />
                            <span asp-validation-for="File.FileName" class="text-danger"></span>
                            <br />
                            <span asp-validation-for="File.Length" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsShowImage"></label>
                            <input asp-for="IsShowImage" type="checkbox" class="ms-5 form-check-input">
                            <span asp-validation-for="IsShowImage" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsShowVidio"></label>
                            <input asp-for="IsShowVidio" type="checkbox" class="ms-5 form-check-input">
                            <span asp-validation-for="IsShowVidio" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>
