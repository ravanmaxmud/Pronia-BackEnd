@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PrioniaApp.Areas.Admin.ViewModels.Order
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            Orders
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Total</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td>@slider.Id</td>
                                <td>@slider.Total</td>
                                <td>@slider.CreatAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end d-flex mt-3">
                                    <a asp-route="admin-order-update" asp-route-id="@slider.Id"><i class="las la-pen text-secondary font-16"></i></a>

                                    <form method="POST" asp-route="admin-payment-delete" asp-route-id="@slider.Id" id="slider-form-@slider.Id"></form>
                                    <button class="border-0" type="submit" form="slider-form-@slider.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>
