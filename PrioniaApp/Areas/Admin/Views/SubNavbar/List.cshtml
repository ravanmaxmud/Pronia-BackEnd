@using PrioniaApp.Areas.Admin.ViewModels.SubNavbars
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-subNav-add" target="_blank" class="btn btn-secondary">Add new SubNavbar</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Order</th>
                            <th>Navbar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subNav in Model)
                        {
                            <tr>
                                <td>@subNav.Name</td>
                                <td>@subNav.Order</td>
                                <td>@subNav.Navbar</td>
                                <td class="text-end">
                                    <a asp-route="admin-subnav-update" asp-route-Id="@subNav.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-subnav-delete" asp-route-id="@subNav.Id" id="book-form-@subNav.Id"></form>
                                    <button type="submit" form="book-form-@subNav.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>